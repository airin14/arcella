{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1>{{ "form_register.title"|trans({}) }}</h1>

                {{ form_start(form) }}
                {{ form_row(form.username) }}
                {{ form_row(form.email) }}
                {{ form_row(form.plainPassword.first) }}
                {{ form_row(form.plainPassword.second) }}

                <button type="submit" class="btn btn-primary" formnovalidate>{{ "form_register.btn.submit"|trans({}) }}</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
